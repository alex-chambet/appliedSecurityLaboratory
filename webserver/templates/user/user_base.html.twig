{% extends "base.html.twig" %}

{% set activeLink = "user" %}

{% block body %}
    <div class="container">
        <br />
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {% block user_body %}{% endblock %}
    </div>
{% endblock %}

